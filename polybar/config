[colors]
;background = ${xrdb:color0:#222}
background = #cc222222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #ffb52a
primary = #555
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 26
;offset-x = 1%
;offset-y = 1%
radius = 0
; fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = "San Francisco Display:pixelsize=12;0"
font-1 = "twemoji:scale=6;1"
font-2 = "Droid Sans:size=10:weight=bold;2"
font-3 = "Weather Icons:size=11;3"

modules-left = i3 wlan cpu memory system-usb-udev network-traffic
modules-center = xwindow player-mpris-simple
modules-right = filesystem xbacklight alsa battery date

tray-position = right
tray-padding = 0

wm-restack = i3

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow

label = %title%
